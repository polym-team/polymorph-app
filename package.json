{
  "name": "polymorph-app",
  "version": "1.0.0",
  "description": "Polymorph App Monorepo",
  "private": true,
  "scripts": {
    "scaffolding": "pnpm --filter scaffolding",
    "jibsayo": "pnpm --filter jibsayo",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@tanstack/react-query": "5.80.7",
    "date-fns": "4.1.0",
    "expo-server-sdk": "3.15.0",
    "lucide-react": "0.511.0",
    "next": "14.2.29",
    "p-limit": "^6.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "20.17.9",
    "@types/react": "18.3.17",
    "@types/react-dom": "18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "8.57.0",
    "eslint-config-next": "15.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "5.7.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "apps/jibsayo/**/*.{ts,tsx}": [
      "bash -c 'cd apps/jibsayo && pnpm tsc'"
    ]
  }
}
